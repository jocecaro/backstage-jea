# GitHub Integration (Optional)
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# PostgreSQL Database Configuration (for production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=backstage
POSTGRES_PASSWORD=backstage

# Backend Authentication Secret (for production)
# Generate with: node -p 'require("crypto").randomBytes(24).toString("base64")'
# BACKEND_SECRET=

# AWS Configuration
# If running in AWS (ECS, EKS), IAM roles will be used automatically
# For local development, you can use AWS credentials or profiles
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_PROFILE=default

# OpenAI API Key (for GenAI plugin if not using AWS Bedrock)
# OPENAI_API_KEY=your_openai_api_key
